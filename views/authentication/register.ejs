      <style>
        .btn-primary {
          background-color: #C84B31 !important;
          border: 1px solid #C84B31 !important;
        }
      </style>
    </head>

    <body>
        
        <%- include('./../header',{loggedin:loggedIn}); -%>

        <div class="container-fluid vh-80">
            <div class="" style="position: relative;top: 5%;">
                <div class="rounded d-flex justify-content-center">
                    <div class="col-lg-6 col-md-8 col-sm-12 shadow-lg p-5 bg-light">
                        <div class="text-center">
                            <p class="display-5 lead">Create Account</p>
                        </div>
                        <div class="p-4">
                            <form action="/register" method="post">
                                <div class="input-group mb-3">
                                  <span class="input-group-text btn-primary">
                                    <i class="bi bi-person-plus-fill text-white"></i>
                                  </span>
                                  <input type="text" class="form-control" name="fullname" placeholder="Full Name" required>
                                </div>
                                <div class="input-group mb-3">
                                    <span class="input-group-text btn-primary">
                                      <i class="bi bi-envelope text-white"></i>
                                    </span>
                                    <input type="email" class="form-control" name="username" placeholder="Email" required>
                                </div>
                                <div class="input-group mb-3">
                                  <span class="input-group-text btn-primary">
                                    <i class="bi bi-telephone-fill text-white"></i>
                                  </span>
                                  <input type="tel" class="form-control" name="phone" placeholder="Phone Number" required>
                                </div>
                                <div class="input-group mb-3">
                                    <span class="input-group-text btn-primary"><i
                                            class="bi bi-key-fill text-white"></i></span>
                                    <input type="password" class="form-control" name="password" placeholder="password" required>
                                </div>
                                <div class="input-group mb-3">
                                  <span class="input-group-text btn-primary">
                                    <i class="bi bi-journal-text text-white"></i>
                                  </span>
                                  <input type="address" class="form-control" name="address" placeholder="address" required>
                                </div>
                                
                                <div class="input-group mb-3">
                                  <select class="form-select" name="role" aria-label="Default select example" required>
                                    <option selected>Select your Role</option>
                                    <option value="student">student</option>
                                    <option value="alumni">Alumni</option>
                                    <option value="teacher">Teacher</option>
                                  </select>
                                </div>
                                <div class="d-grid col-12 mx-auto">
                                    <button class="btn btn-primary" type="submit"><span></span> Sign up</button>
                                </div>
                                
                                <p class="text-center mt-3" style="color:red"><%= errMsg %>
                              </p>

                                <p class="text-center mt-3">Already have an account?
                                    <a class="text-primary" href="/login">Sign in</a>
                                </p>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <script src="/jquery/dist/jquery.js"></script>
    <script src="/jquery/dist/jquery.min.js"></script>
    <script src="OwlCarousel/dist/owl.carousel.min.js"></script>
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
    </body>
</html>