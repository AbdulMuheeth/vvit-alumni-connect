<div class="container mt-4">
    <div class="section-header mt-2 mb-4">
        <h1>Blog</h1>
        <a class="btn btn-success" href="/blog" role="button"> View all</a>
    </div>
    <div id="blog-slider" class="owl-carousel owl-theme">
        <% blogPosts.forEach((post) => { %>
            <div class="card m-2">

              <% if(post.image) { %>
              <img src="<%= post.image %>" class="card-img-top" alt="">
              <% } %>
              
              <div class="card-body">
                <h5 class="card-title"><%= post.title %></h5>
                <p class="card-text card-description"><%= post.description.substring(0, 50) %>...</p>
                <a href="/blog/<%= post.id %>" class="btn btn-primary mb-2">Read post</a>
                <p class="card-text"><small class="text-muted">Last updated <%= post.date.toLocaleDateString() %></small></p>
              
              </div>
          </div>

        <% }) %>
    </div>
</div>