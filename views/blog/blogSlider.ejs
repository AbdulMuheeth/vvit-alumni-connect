<div class="container mt-4">
    <div class="section-header mt-2 mb-4">
        <h1>Blog</h1>
        <a class="btn btn-success" href="/blog" role="button"> View all</a>
    </div>
    <div id="blog-slider" class="owl-carousel owl-theme">
        <% blogPosts.forEach((post) => { %>

            <div class="card mb-3" style="max-width: 530px;">
                <div class="row g-0">
                  <div class="col-md-4">

                    <% if(post.image) { %>
                        <img src="<%= post.image %>" class="img-fluid rounded-start h-100" alt="">
                    <% } %>
    
                  </div>
                  <div class="col-md-8">
                    <div class="card-body">
                      <h5 class="card-title"><%= post.title %></h5>
                      <p class="card-text"><%= post.description.substring(0, 100) %>...</p>
                      <a href="/blog/<%= post.id %>" class="btn btn-primary">Read post</a>
                      <p class="card-text"><small class="text-muted">Last updated at <%= post.date.toLocaleDateString() %></small></p>
                    </div>
                  </div>
                </div>
            </div>

        <% }) %>
    </div>
</div>