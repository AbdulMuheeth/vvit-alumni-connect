<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link href="https://use.fontawesome.com/releases/v5.7.2/css/all.css " rel="stylesheet">

    <!--  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script> -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" ></script>
    <!-- <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script> -->

    
    <!-- Style -->
    <link rel="stylesheet" href="/css/event.css">

    <title></title>
  </head>
  <body>
    
    <%- include('./../header',{ loggedin : loggedIn }); -%>
    
    <section id="top-display" style="background: url('<%=event.images.profile%>') top center;;">
      <div class="top-container">
        <h1 class="mb-4 pb-0 text-danger"><%= event.name %></h1>
        <p class="mb-4 pb-0 text-white"><%= event.tag %></p>
        <a href="#about" class="btn btn-danger">About The Event</a>
      </div>
    </section>


  



  <!-- cardsss -->

  <div class="container" style="margin-top: 50px;">
    <% if(event.guests.length != 0) { %>  
    <h1> GUEST's </h1> <br>
    <!-- <div class="row"> -->  
      <% event.guests.forEach((guest) => { %>
      <div  class="container">
        <div class="col-lg-4">
            <div class="card p-0">
                <div class="card-image"> <img src="<%=guest.guestimage%>" alt=""> </div>
                <div class="card-content d-flex flex-column align-items-center">
                    <h4 class="pt-2"><%= guest.guestname %></h4>
                    <h5><%= guest.guestfield %></h5>
                    <ul class="social-icons d-flex justify-content-center">
                      <% if(guest.profile.facebook != "None"){ %>
                        <li style="--i:1"> <a href="<%= guest.profile.facebook %>"> <span class="fa fa-facebook"></span> </a> </li>
                      <% } %>
                      <% if(guest.profile.twitter != "None"){ %>

                        <li style="--i:2"> <a href="<%= guest.profile.twitter %>"> <span class="fa fa-twitter"></span> </a> </li>
                      <% } %>
                      <% if(guest.profile.instagram != "None"){ %>
  
                        <li style="--i:3"> <a href="<%= guest.profile.instagram %>"> <span class="fa fa-instagram"></span> </a> </li>
                      <% } %>
                    </ul>
                </div>
            </div>
        </div>
      </div>
      <% }) }  %>
       <!-- <% %> -->
    <!-- </div> -->
  </div>


<section id="about">
  <div class="container" style="margin-top: 50px;">
    <h1>About The Event</h1>
    <div class="row">
      <div class="col-lg-12">
        <p><%= event.description %></p>
      </div>
    </div>
  </div>
  <div class="container" data-mdb-toggle="animation" data-mdb-animation-start="onLoad" data-mdb-animation-reset="true" data-mdb-animation="fade-in">
  <div class="row">
    <div class="col-lg-6">
      <h3>Where</h3>
      <p><%= event.location %></p>
    </div>
    <div class="col-lg-6">
      <h3>When</h3>
        <h6><%= event.duration.start.toLocaleString('default',{month:'short',weekday:'long',year:'numeric',day:'numeric',hour:'numeric',minute:'numeric'})%> </h6>
             to 
          <h6><%= event.duration.end.toLocaleString('default',{month:'short',weekday:'long',year:'numeric',day:'numeric',hour:'numeric',minute:'numeric'})%></h6>
    </div>
    </div>
  </div>
</section>

<div class="container" style="margin-top: 50px;">
    <h1>
        Gallery !!!
    </h1>
</div>

  </body>
</html>